# tmiDB 환경변수 설정 파일
# docker-compose.yml이 이 파일을 참조하여 각 서비스를 설정합니다.
# 실제 운영 환경에 배포하기 전, 특히 JWT_SECRET과 POSTGRES_PASSWORD를 반드시 변경하세요.

# 공통 버전
TMIDB_VERSION=0.1.0

# 1. PostgreSQL / TimescaleDB 설정
POSTGRES_DB=tmidb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=tmidb_dev_password # 개발용 기본 비밀번호
TMIDB_DB_PORT=5432

# 2. PostgREST API 서버 설정
PGRST_DB_ANON_ROLE=postgres
TMIDB_PGRST_PORT=3000

# 3. Realtime 스트리밍 서버 설정
# 중요: 아래 값은 예시이며, 반드시 32자 이상의 강력한 비밀 키로 교체해야 합니다.
JWT_SECRET=tmidb-jwt-secret-key-for-development-environment-only-change-in-production-12345
TMIDB_RT_PORT=4000

# 4. SeaweedFS S3 스토리지 설정
TMIDB_S3_PORT=8333

# 5. NATS 메시지 버스 설정
TMIDB_NATS_PORT=4222

# 6. tmiDB 프록시 설정
TMIDB_PROXY_PORT=8080
